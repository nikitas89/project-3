<div class="container">
  <%= link_to 'Back', groups_path %>

  <div class="row"></div>
<div class="col-md-6 col-sm-12 col-12">
  <div class="card " id="<%=@group.name %>">
    <div class="card-header "><%= @group.name %>
      <%= link_to edit_group_path(@group) do %>
        <i class="fa fa-pencil"></i>
      <% end %>
      <%= link_to group_path(@group) , method: :delete, remote:true do %>
        <i class="fa fa-close"></i>
      <% end %>
    </div>
    <div class="card-body">

    <% members = @group.users.all %>
    <p class="card-text"> <% members.each do |mbr| %>
      <%=  mbr.name %> <br/>
      <small><%=  mbr.email %> <br/></small>
    <% end%></p>
    </div>
  </div>
</div>

